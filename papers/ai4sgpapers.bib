@InProceedings{deraedt2019,
  author          = {De Raedt, Luc and Manhaeve, Robin and Duman\v{c}i\'{c}, Sebastijan and Demeester, Thomas and Kimmig, Angelika},
  booktitle       = {Proc. 14th Int. Workshop Neural-Symbolic Learning and Reasoning (NeSy 2019 @ IJCAI 2019)},
  title           = {Neuro-Symbolic = Neural + Logical + Probabilistic},
