  booktitle       = {Proc. 5th Ann. Workshop on Comput. Ling. Clin. Psychol. (CLPsych 2018) at NAACL-HLT 2018},
  title           = {Predicting psychological health from childhood essays: The {UGent-IDLab} {CLPsych} 2018 shared task system},
